<style>
.tpl-table-list-select {
	text-align: left;
	width: 470px;
}

#statusChange {
	width: 350px;
}
.am-u-sm-4,label,input{
	padding-right:0px !important;
	padding-left: 0px !important;
}

.label-weight{
	font-weight: bold;
} 
.fabu{
	padding-right: 3% !important;
}
.am-left{
	float:left;
}
.table-top-border{
	border-top: 1px solid #eef1f5;
	padding-top:10px;
	padding-bottom:10px;
}
</style>
<div class="row-content am-cf">
	<div class="row">
		<div class="am-u-sm-12 am-u-md-12 am-u-lg-12">
			<div class="widget am-cf">
				<div class="widget-head am-cf">
					<div class="widget-title  am-cf">校曆推薦管理</div>
				</div>
				<div class="widget-body  am-fr">
					<div class="am-u-sm-12">
						<div class="am-u-sm-12 am-u-lg-3">
							<div class="am-u-sm-4 label-weight">
								標題：
							</div>
							<div class="am-u-sm-8">
								<div class="am-form-group am-input-group-sm tpl-form-border-form cl-p">
									<input type="text" class="am-form-field" placeholder="標題" id="title" name="title" th:value="${title}" />
								</div>
							</div>
						</div>
	
						<input type="hidden" id="sort" name="sort" th:value="${sort}"/>
						<input type="hidden" id="isAsc" name="isAsc" th:value="${isAsc}"/>
						
						<div class="am-u-sm-12 am-u-lg-6" style="float:left">
							<label class="label-weight am-left fabu">活動日期： </label>
							<div classs="tpl-form-border-form">
								<input type="text" id="from" class="empty date-input" name="from" placeholder="yyyy-mm-dd" readonly="readonly" th:value="${from}" /> 
								<span>至</span>
								<input type="text" id="to" class="empty date-input" name="to" placeholder="yyyy-mm-dd" readonly="readonly" th:value="${to}" />
							</div>
						</div>
					</div>
					
					<div class="am-u-sm-12">
						<div class="am-u-sm-12 am-u-lg-3">
							<div class="am-u-sm-4 label-weight">
								學校：
							</div>
							<div class="am-u-sm-8">
								<div class="am-form-group am-input-group-sm tpl-form-border-form cl-p">
									<input type="text" class="am-form-field" placeholder="學校" id="school" name="school" th:value="${school}" />
								</div>
							</div>
						</div>
					
						<div class="am-u-sm-12 am-u-lg-3">
							<div class="am-u-sm-4 label-weight">
								狀態：
							</div>
							<div class="tpl-table-list-select">
								<div class="am-u-sm-5">
									<select id="status" data-am-selected="{btnWidth: '150px'}"> 
										<option value="0">請選擇狀態</option>
										<option value="1" th:selected="${status eq '1'}">上架</option>
										<option value="2" th:selected="${status eq '2'}">下架</option>
									</select>
								</div>
							</div>
						</div>
						<div class="am-u-sm-12 am-u-lg-6"></div>
					</div>
					<div class="am-u-sm-12" style="padding-bottom:10px;">
						<div class="am-u-sm-12 am-u-lg-3" style="float:left;">
							<div class="tpl-table-list-select">
								<div>
									<button class="am-btn am-btn-primary am-btn-sm am-round"
										type="button" onclick="search()">搜索</button>
									<button class="am-btn am-btn-warning am-btn-sm am-round"
										type="button" onclick="allEmpty()">清空</button>
								</div>
							</div>
						</div>
					</div>
					
					<div class="am-u-sm-12 table-top-border">
						<div class="am-u-sm-12 am-u-md-3 am-u-lg-1">
							<div class="am-form-group">
								<div class="am-btn-toolbar">
									<div class="am-btn-group am-btn-group-xs">
										<button shiro:hasPermission="schoolCalendar:add" type="button"
											class="am-btn am-btn-default am-btn-success"
											onclick="loadPage('school/form')">
											<span class="am-icon-plus"></span> 新增
										</button>
									</div>
								</div>
							</div>
						</div>
					</div>

						<table width="100%"
							class="am-table am-table-compact am-table-striped tpl-table-black "
							id="example-r">
							<thead>
								<tr>
									<th>序號</th>
									<th>標題</th>
									<th>學校</th>
									<th>活動日期<div id="click-sort"><div id="sort-asc" onclick="sortAsc('activity_date');" th:style="${(sort eq 'activity_date' && isAsc eq 'true') ? 'color:#666565' : ''}"><i class="am-icon-sort-asc"></i></div><div  id="sort-desc" onclick="sortDesc('activity_date');" th:style="${(sort eq 'activity_date' && isAsc eq 'false') ? 'color:#666565' : ''}"><i class="am-icon-sort-desc"></i></div></div></th>
									<th>創建人</th>
									<th>創建時間<div id="click-sort"><div id="sort-asc" onclick="sortAsc('create_time');" th:style="${(sort eq 'create_time' && isAsc eq 'true') ? 'color:#666565' : ''}"><i class="am-icon-sort-asc"></i></div><div  id="sort-desc" onclick="sortDesc('create_time');" th:style="${(sort eq 'create_time' && isAsc eq 'false') ? 'color:#666565' : ''}"><i class="am-icon-sort-desc"></i></div></div></th>
									<th>狀態</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
								<tr class="gradeX" th:each="record,recordStat:${page.records}">
									<td th:text="${recordStat.index+1}"></td>
									<td th:text="${record.title}"></td>
									<td th:text="${record.school}"></td>
									<td th:text="${#dates.format(record.activityDate, 'yyyy-MM-dd')}"></td>
									<td th:text="${record.createName}"></td>
									<td th:text="${#dates.format(record.createTime, 'yyyy-MM-dd HH:mm:ss')}"></td>

									<td class="am-text-middle">
										<span th:if="${record.status == 1}" class='am-badge am-badge-success'>上架</span>
										<span th:if="${record.status == 2}" class='am-badge am-badge-warning'>下架</span>
									</td>
									
									<td>
										<div class="tpl-table-black-operation">
											<a href="javascript:;" th:onclick="'javascript:loadPage(\'school/'+${record.id}+'/select\');'" shiro:hasPermission="schoolCalendar:edit"> <i class="am-icon-pencil"></i> 編輯</a>
											<a href="javascript:;" th:if="${record.status==2}" th:onclick="'javascript:changeStatus('+${record.id}+',1);'"
												class="tpl-table-black-operation-warning warning-btn" shiro:hasPermission="schoolCalendar:shelf"><i class="am-icon-level-up"></i>上架</a>
											<a href="javascript:;" th:if="${record.status==1}" th:onclick="'javascript:changeStatus('+${record.id}+',2);'"
												class="tpl-table-black-operation-warning warning-btn" shiro:hasPermission="schoolCalendar:shelf"><i class="am-icon-level-down"></i>下架</a>
												
										</div>
									</td>
								</tr>
								<!-- more data -->
							</tbody>
						</table>
					</div>
					<div class="am-u-lg-12 am-cf">

						<div class="am-fr">
							<ul class="am-pagination tpl-pagination">

							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script th:inline="javascript">
	<![CDATA[

		$("#from").datepicker({
		      defaultDate: "+1w",
		      changeMonth: true,
		      numberOfMonths: 3,
		      onClose: function(selectedDate) {
		    	  console.log(selectedDate)
		        $("#to").datepicker( "option", "minDate", selectedDate );
		      }
		    });
	    $("#to").datepicker({
	      defaultDate: "+1w",
	      changeMonth: true,
	      numberOfMonths: 3,
	      onClose: function(selectedDate) {
	        $("#from").datepicker("option", "maxDate", selectedDate );
	      }
	    });
		 
	 	$('select').selected();
	 	function params(sort,isAsc) {
		 	var title = $('#title').val();
		 	var school = $('#school').val();
			var status = $('#status').val();
			var from = $('#from').val();
			var to = $('#to').val();
			
			if($("#sort").val()!=null && sort==null){
				sort=$("#sort").val();
			}
			
			if($("#isAsc").val()!=null && isAsc==null){
				isAsc=$("#isAsc").val();
			}
			
			
			var jsonParam = {
				"title":title,
				"school":school,
				"status":status,
				"from":from,
				"to":to,
				"sort":sort,
				"isAsc":isAsc
			}
			return jsonParam;
	 	}
		initPageToJson([[${page.pages}]],[[${page.current}]],'school/listUI',params());
	    
		function search(){
			loadPageToJson('school/listUI',params());
		}
		
		function changeStatus(id,status){
			var context;
			if (status == 1) {
				context = '确认上架吗？'
			}else{
				context = '确认下架吗？'
			}
			
			layer.confirm(context, {
		        icon : 3,
		        title : '提示'
		    }, function(index, layero) {
		        $.ajax({
		            type : "GET",
		            url :  "school/changeStatus/"+id+"/"+status,
		            dataType : "json",
		            success : function(resultdata) {
		                if (resultdata.code=="0") {
		                    layer.msg(resultdata.msg, {
		                        icon : 1
		                    });
		                    loadPage('school/listUI');
		                } else {
		                    layer.msg(resultdata.msg, {
		                        icon : 0
		                    });
		                }
		            },
		            error : function(errorMsg) {
		                layer.msg('服務器未響應，請稍後重試！', {
		                    icon : 3
		                });
		            }
		        });
		        layer.close(index);
		    });
		}
		
		
		function allEmpty() {
			$("#title").val('');
			$("#school").val('');
			
			$("#sort").val('id');
			$("#isAsc").val('false');
			
			$("#status").val(0).trigger('changed.selected.amui');
			$(".empty").removeAttr('value');
		}
		
		
		

		function sortAsc(clum) {
			$("#sort-desc").css("color","#c0bfbf");
			$("#sort-asc").css("color","#666565");
			loadPageToJson('school/listUI',params(clum,true));
			console.log(params(clum,true))
		}
		
		function sortDesc(clum) {
			$("#sort-desc").css("color","#666565");
			$("#sort-asc").css("color","#c0bfbf");
			loadPageToJson('school/listUI',params(clum,false));
			console.log(params(clum,false))
		}
		
		
		
		
		]]>
	</script>

